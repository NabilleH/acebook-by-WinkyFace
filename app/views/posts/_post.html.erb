<div class='post'><%= simple_format post.message %>
  <p><%= post.created_at.to_s(:long_ordinal) %></p>
    <% if post.user_id == current_user.id %>
      <%= form_for(post, :html => { :method => :delete }) do |f| %>
        <%= f.submit "Delete Post" %>
      <% end %>
    <% end %>

    <% if post.created_at > Time.now - 600 && post.user_id == current_user.id%>
      <%= link_to edit_post_path(post) do %>
          Edit post<br>
      <% end %>
    <% end %>

    <%= render partial: 'likes/form', locals: { likeable: post } %>

    <% post.comments.each do |comment| %>
    <p>
      <%= comment.message %>
    </p>
      <% if comment.user_id == current_user.id %>
        <%= form_for([post, comment], :html => { :method => :delete }) do |f| %>
          <%= f.submit "Delete Comment" %>
        <% end %>
      <% end %>

      <%= link_to edit_post_comment_path(post, comment) do %>
        Edit comment
      <% end %>
    <%= render partial: 'likes/form', locals: { likeable: comment } %>
    <% end %>

    <%= form_for [post, Comment.new] do |form| %>
      <%= form.text_field :message %>

      <%= form.submit "Add comment" %>
    <% end %>
</div>
