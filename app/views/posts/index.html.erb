<% @posts.each do |post| %>
    <p class='post'><%= post.message %></p>
    <p><%= post.created_at.to_s(:long_ordinal) %></p>

    <%= form_for(post, :html => { :method => :delete }) do |f| %>
        <%= f.submit "Delete Post" %>
      <% end %>

      <% if post.created_at > Time.now - 600 && post.user_id = current_user.id%>
      <%= post.user_id %>
        <%= current_user.id %>
        <%= link_to edit_post_path(post) do %>
        Edit post<br>
        <% end %>
    <% end %>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
